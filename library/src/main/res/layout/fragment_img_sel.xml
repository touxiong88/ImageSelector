<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/EtInputF"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:visibility="gone"
                android:hint="输入密码" />

            <Button
                android:id="@+id/BtnEnterF"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:visibility="gone"
                android:text="提交" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvImageList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="?android:attr/actionBarSize"
            android:overScrollMode="never" />

        <RelativeLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/mbottom_bg"
            android:clickable="true">

            <Button
                android:id="@+id/btnAlbumSelected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableRight="@drawable/ic_album"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

        </RelativeLayout>

    </RelativeLayout>

    <com.yuyh.library.imgsel.widget.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone" />
</FrameLayout>
